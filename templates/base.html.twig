<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome to Crowdin !
			{% endblock %}
		</title>
		<link rel="icon" type="images/png" href="{{ asset('/favicon.png') }}"/>
		{% block stylesheets %}
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="navbar-header">
				<h2>Crowdin</h2>
			</div>
			{% if is_granted("IS_AUTHENTICATED_FULLY") %}
				<ul class="navbar-nav">
					<li class="nav-item mx-2">
						<a href="/todolist" class="nav-link">Projects</a>
					</li>
					<li class="nav-item mx-2">
						<a href="/profile" class="nav-link">Profil</a>
					</li>
				</ul>
			{% endif %}
			<ul class="navbar-nav ml-auto">
				{% if is_granted("IS_AUTHENTICATED_FULLY") %}
					<li class="nav-item mx-2">
						<a class="nav-link" href="/logout">
							<span class="glyphicon glyphicon-log-in">Logout
							</a>
						</li>
					{% else %}
						<li class="nav-item mx-2">
							<a class="nav-link" href="/register">
								<span class="glyphicon glyphicon-user">Register</span>
							</a>
						</li>
						<li class="nav-item mx-2">
							<a class="nav-link" href="/login">
								<span class="glyphicon glyphicon-log-in">Login</span>
							</a>
						</li>
					{% endif %}
				</ul>
			</nav>
			{% for message in app.flashes('notice') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
		</body>
		{% block body %}{% endblock %}

		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
			<script>
				$('.custom-file-input').on('change', function (event) {
var inputFile = event.currentTarget;
$(inputFile).parent().find('.custom-file-label').html(inputFile.files[0].name);
});
			</script>
		{% endblock %}
	</body>
</html>

{% extends 'base.html.twig' %}

{% block title %}Crowdin
{% endblock %}

{% block body %}
	<div class="card text-center">
		<div class="card-header">
			<ul class="nav nav-tabs card-header-tabs">
				<li class="nav-item">
					<a class="nav-link" href="/profile">Profil</a>
				</li>
				<li>
					<a class="nav-link active" href="/profile/add">Ajouter une langue</a>
				</li>
				<li>
					<a class="nav-link" href="/profile/stat">Mes statistiques</a>
				</li>
			</ul>
		</div>
		<div class="card-body">
			<h3 class="card-header text-white bg-dark mb-3">Profil</h3>
			<tbody>
				<p>Nom : {{ app.user.name }}</p>
				<p>E-mail : {{ app.user.email }}</p>
			</tbody>
		</div>
		<div class="card-body">
			<h3 class="card-header text-white bg-dark mb-3">Choix des langues</h3>
			<div class="d-flex justify-content-center">
				{{ form_start(form) }}
				{{ form_row(form.langue_name) }}
				{{ form_errors(form) }}
				<button class="btn btn-outline-success">Ajouter</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>{% endblock %}
